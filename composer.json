{
    "name": "liquiddesign/defaultweb3",
    "description": "Defaultweb3 is core for Liquid Design s.r.o.",
    "license": "MIT",
    "require": {
        "php": ">=7.1.0",
        "ext-pdo": "*",
        "nette/nette": "~3.0",
        "liquiddesign/storm": "~1.0",
        "lqdvendor/security": "@dev",
        "lqdvendor/pages": "@dev",
        "lqdvendor/pages-2gen": "@dev",
        "lqdvendor/cms": "@dev",
        "lqdlib/storm": "@dev",
        "lqdvendor/admin": "@dev",
        "lqdvendor/translator": "@dev",
        "lqdvendor/modules": "@dev",
        "lqdvendor/email": "@dev",
        "lqdvendor/web": "@dev",
        "lqdvendor/common": "@dev",
        "lqdvendor/userfiles": "@dev",
        "lqdvendor/catalog": "@dev",
        "lqdvendor/news": "@dev",
        "lqdvendor/blog": "@dev",
        "lqdvendor/users": "@dev",
        "lqdvendor/poll": "@dev"
    },
    "autoload": {
        "psr-4": {
            "App\\Tools\\": "app/Tools",
            "App\\": "app/modules"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/security.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/pages-2gen.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/pages.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/cms.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdlib/storm.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/admin.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/translator.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/modules.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/email.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/web.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/common.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/userfiles.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/catalog.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/news.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/blog.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/users.git"
        },
        {
            "type": "vcs",
            "url": "git@gitlab.com:lqdvendor/poll.git"
        }
    ],
    "scripts": {
        "post-create-project-cmd": [
            "@installer",
            "npm install --prefix ./public ./public",
            "npm run gulp --prefix ./public"
        ],
        "start-project": [
            "composer update",
            "@installer",
            "npm install --prefix ./public ./public",
            "npm run gulp --prefix ./public"
        ],
        "maintenance": [
            "App\\Tools\\Scripts\\Maintenance::fire"
        ],
        "phpinfo": [
            "App\\Tools\\Scripts\\Phpinfo::fire"
        ],
        "clear-nette-cache": [
            "App\\Tools\\Scripts\\ClearCache::fire"
        ],
        "gulp": [
            "npm run gulp --prefix ./public"
        ],
        "sync-database": [
            "@clear-nette-cache",
            "composer clear-cache",
            "App\\Tools\\Scripts\\SyncDatabase::fire"
        ],
        "dump-database": [
            "App\\Tools\\Scripts\\DumpDatabase::fire"
        ],
        "backup-database": [
            "App\\Tools\\Scripts\\BackupDatabase::fire"
        ],
        "import-database": [
            "App\\Tools\\Scripts\\ImportDatabase::fire"
        ],
        "create-userfiles": [
            "composer clear-cache",
            "@clear-nette-cache",
            "App\\Tools\\Scripts\\CreateUserfiles::fire"
        ],
        "sync-data": [
            "@clear-nette-cache",
            "composer clear-cache",
            "App\\Tools\\Scripts\\SyncData::fire"
        ],
        "installer": [
            "App\\Tools\\Scripts\\Installer::fire"
        ],
        "clear-tests": [
            "App\\Tools\\Scripts\\ClearTest::fire"
        ],
        "test": [
            "composer clear-tests",
            "App\\Tools\\Scripts\\CodeceptionData::fire",
            "codecept run acceptance --steps",
            "composer clear-tests"
        ],
        "phpstan": "phpstan analyse --memory-limit 1G -c phpstan.neon",
        "phpcs": "phpcs --standard=ruleset.xml app"
    },
    "require-dev": {
        "composer/composer": "*",
        "codeception/codeception": "^3.1",
        "liquiddesign/codestyle": "1.0.1",
        "phpstan/phpstan": "*"
    }
}
